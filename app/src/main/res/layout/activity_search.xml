<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
                                                     android:layout_height="60dp">
        <com.google.android.material.appbar.MaterialToolbar android:layout_width="match_parent"
                                                            android:id="@+id/toolbar2"
                                                            android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal">
                <EditText android:layout_width="match_parent"
                          android:id="@+id/search_edit"
                          android:singleLine="true"
                          android:layout_weight="1"
                          android:hint="Search" android:layout_height="match_parent"></EditText>
                <TextView android:layout_width="60dp" android:layout_height="match_parent"
                          android:textColor="@color/black_alp"
                          android:gravity="center"
                          android:id="@+id/categ"
                          android:textSize="20dp"
                          android:text ="插画"></TextView>

                <Spinner android:layout_width="40dp"
                         android:entries="@array/data"
                         android:id="@+id/spinner"
                         android:spinnerMode="dropdown"
                         android:layout_height="match_parent"/>
                <ImageButton android:layout_width="50dp"
                             android:id="@+id/search"
                             android:src="@drawable/ic_search"
                             android:background="@null"
                             android:layout_height="match_parent"></ImageButton>

            </LinearLayout>



        </com.google.android.material.appbar.MaterialToolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="60dp"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>