<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activity.UserActivity">


    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="200dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout

                android:layout_width="match_parent"

                android:layout_height="170dp"

                app:contentScrim="?attr/colorPrimary"

                app:expandedTitleMarginBottom="100dp"

                app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <ImageView

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:id="@+id/user_bac"

                    app:layout_collapseMode="parallax" android:scaleType="centerCrop"
                    app:srcCompat="@drawable/empty_hint"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="50dp"
                                                               android:background="@color/black_alp"
                                                               android:orientation="horizontal"
                                                               android:layout_gravity="bottom">
                <TextView
                        android:text="LV 0"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:textSize="12sp"
                        android:background="@drawable/level_bg_6"
                        android:layout_height="wrap_content" android:id="@+id/textView15"
                        app:layout_constraintStart_toEndOf="@+id/user_name" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="8dp"/>
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_bilibili_line"
                        android:id="@+id/imageView11" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:layout_gravity="top"
                        android:id="@+id/user_name"

                        android:text="JIL"
                        android:textColor="@color/white"

                        android:textSize="25sp"
                        app:layout_constraintStart_toEndOf="@+id/imageView11"
                        app:layout_constraintTop_toTopOf="@+id/imageView11"/>
                <TextView
                        android:text="TextView"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:autoLink="web"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView14"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                        app:layout_constraintStart_toEndOf="@+id/imageView11"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <!--            app:tabMode="scrollable"-->
        <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:id="@+id/tabs"
                app:tabIndicatorHeight="3dp"
                android:layout_height="40dp"
                app:tabIndicatorGravity="bottom" app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
        >
            <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="全部"/>
            <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="插画"/>
            <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="照片"/>

        </com.google.android.material.tabs.TabLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent" android:id="@+id/viewpager">
    </androidx.viewpager.widget.ViewPager>

</androidx.coordinatorlayout.widget.CoordinatorLayout>