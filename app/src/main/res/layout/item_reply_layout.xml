<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="1dip"
              android:paddingBottom="1dip"
              android:paddingStart="8dip"
              android:paddingEnd="8dip">

    <ImageView android:id="@+id/icon"
               android:src="@drawable/noface"
               android:layout_width="24dip"
               android:layout_height="24dip"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="user_name"
            android:textColor="?attr/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView22" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon" android:layout_marginStart="8dp"/>
    <TextView android:id="@+id/textView20"
              android:layout_width="wrap_content"
              android:textColor="@android:color/black"
              android:text="示例评论【狗头】bilibili干杯"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:paddingStart="?android:attr/listPreferredItemPaddingStart"
              app:layout_constraintStart_toEndOf="@+id/icon"
              android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView22"/>
    <TextView
            android:layout_width="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:layout_height="20dp" android:id="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toStartOf="@+id/textView20"
    />

</androidx.constraintlayout.widget.ConstraintLayout>