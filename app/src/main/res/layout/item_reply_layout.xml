<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:paddingTop="1dp"
                                                   android:background="@drawable/background_rip"
                                                   android:paddingBottom="1dp"
                                                   android:paddingStart="8dp"
                                                   android:paddingEnd="8dp">

    <ImageView android:id="@+id/icon"
               android:src="@drawable/noface"
               android:layout_width="24dp"
               android:layout_height="24dp"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="user_name"
            android:textColor="?attr/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView22" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon" android:layout_marginStart="8dp"/>
    <TextView android:id="@+id/textView20"
              android:layout_width="0dp"
              android:textColor="@android:color/black"
              android:text="示例评论【狗头】bilibili干杯"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:layout_gravity="center_horizontal"
              android:paddingStart="?android:attr/listPreferredItemPaddingStart"
              app:layout_constraintStart_toEndOf="@+id/icon"
              android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView22"
              app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:textSize="12sp"
            android:text="共185条回复"
            android:gravity="center_vertical"
            android:layout_height="30dp" android:id="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_no_voted"
            android:id="@+id/imageView12"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toStartOf="@+id/textView20"/>
    <ImageView
            android:layout_width="30dp"
            android:padding="5dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_message"
            android:id="@+id/imageView13"
            app:layout_constraintStart_toEndOf="@+id/imageView12"
            app:layout_constraintTop_toBottomOf="@+id/textView20" android:layout_marginStart="8dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imageView13"
            app:layout_constraintStart_toStartOf="@+id/imageView12" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/start_reply">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>