<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="actionBarTheme">@style/BaseActionTheme</item>

    </style>

    <style name="BaseActionTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="BaseToolbar">
        <item name="colorControlNormal">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="BaseTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">  
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.green">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green_light</item>
    </style>

    <style name="AppTheme.pink">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="colorAccent">@color/pink_light</item>
    </style>

    <style name="AppTheme.purple">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/purple_dark</item>
    </style>

    <style name="AppTheme.tea">
        <item name="colorPrimary">@color/tea</item>
        <item name="colorPrimaryDark">@color/tea</item>
        <item name="colorAccent">@color/tea_dark</item>
    </style>

    <style name="AppTheme.walnut">
        <item name="colorPrimary">@color/walnut</item>
        <item name="colorPrimaryDark">@color/walnut</item>
        <item name="colorAccent">@color/walnut_light</item>
    </style>

    <style name="AppTheme.seaPine">
        <item name="colorPrimary">@color/seaPine</item>
        <item name="colorPrimaryDark">@color/seaPine</item>
        <item name="colorAccent">@color/seaPine_light</item>
    </style>

    <style name="AppTheme.seedling">
        <item name="colorPrimary">@color/seedling</item>
        <item name="colorPrimaryDark">@color/seedling</item>
        <item name="colorAccent">@color/seedling_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
